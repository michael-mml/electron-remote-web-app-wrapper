{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "typescript",
			"tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc: build - tsconfig.json"
        },
		// TODO: change the debug launch configuration to this task once we get hot-reload for the Electron process
		// Watches for changes in .ts files and recompiles the .js
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - tsconfig.json"
		}
	]
}
